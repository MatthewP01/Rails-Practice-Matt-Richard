<h1><%= @book.title %> (<%= @book.pages %> pages)</h1>

<h2>Authors: </h2>

<ul>
  <% @book.authors.each do |author| %>
  <li><%= link_to author.name_and_year, author_path(author) %>
    <%= form_for author, method: :delete do |f| %>
      <%= f.submit value: "Remove author" %>
    <% end %>
  </li>
  <% end %>
</ul>

Author: <%= form_for @author_book do |f| %>
<%= f.hidden_field :book_id, :value => @book.id %>
<%= f.collection_select :author_id, @authors, :id, :name %>
<%= f.submit value: "Add author"%>
<% end %>
